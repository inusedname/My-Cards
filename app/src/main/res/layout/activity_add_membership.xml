<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddMSActivity">

<!--    android:background="@color/dark_color"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_marginBottom="10dp"
        android:background="?attr/colorPrimary"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingTop="30dp"

        android:paddingBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/product_sans_bold"
            android:includeFontPadding="false"
            android:text="Thêm mới"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="34sp" />

        <Spinner
            android:id="@+id/memTypesSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent" />

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="135dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingTop="20dp"
            android:paddingEnd="20dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <include
                    android:id="@+id/front_image"
                    layout="@layout/item_cardview_add_ms"
                    android:layout_width="@dimen/addms_cardview_width"
                    android:layout_height="@dimen/addms_cardview_height"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1" />

                <androidx.legacy.widget.Space
                    android:layout_width="20dp"
                    android:layout_height="match_parent" />

                <include
                    android:id="@+id/back_image"
                    layout="@layout/item_cardview_add_ms"
                    android:layout_width="@dimen/addms_cardview_width"
                    android:layout_height="@dimen/addms_cardview_height"
                    android:layout_weight="1" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Short Name"

                android:textAlignment="viewStart"
                tools:ignore="HardcodedText" />


            <EditText
                android:id="@+id/shortNameEditText_card"
                android:layout_width="@dimen/text_field_width_normal"
                android:layout_height="@dimen/text_field_height"
                android:layout_weight="1"
                android:background="@drawable/bg_edittext_light_darker"
                android:ems="10"
                android:hint="Short Name"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                tools:ignore="HardcodedText" />


            <TextView
                android:id="@+id/errorTextView_shortName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="#FF1100" />

            <androidx.legacy.widget.Space
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Full Name"
                android:textAlignment="viewStart" />

            <EditText
                android:id="@+id/fullNameEditText_card"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_field_height"
                android:layout_weight="1"
                android:background="@drawable/bg_edittext_light_darker"
                android:ems="10"
                android:hint="Full Name"
                android:inputType="textPersonName"
                android:paddingLeft="10dp" />

            <TextView
                android:id="@+id/errorTextView_fullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="#FF0000" />

            <androidx.legacy.widget.Space
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ID"
                android:textAlignment="viewStart" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_edittext_light_darker"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/idEditText_card"
                    android:layout_width="@dimen/text_field_width_long"
                    android:layout_height="@dimen/text_field_height"
                    android:layout_weight="1"
                    android:background="@drawable/bg_edittext_light_darker_leftcurved"
                    android:hint="ID"
                    android:inputType="textPersonName"
                    android:paddingStart="10dp" />

                <ImageButton
                    android:id="@+id/qrScannerBt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="30"
                    android:background="@drawable/bg_button_side_text_rightcurved"
                    app:srcCompat="@drawable/ic_baseline_qr_code_scanner_24"
                    app:tint="?attr/colorSecondary" />
            </LinearLayout>

            <TextView
                android:id="@+id/errorTextView_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="#FF1100" />

            <androidx.legacy.widget.Space
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Issuer"
                android:textAlignment="viewStart" />

            <EditText
                android:id="@+id/issuerEditText_card"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_field_height"
                android:layout_weight="1"
                android:background="@drawable/bg_edittext_light_darker"
                android:ems="10"
                android:hint="Issuer"
                android:inputType="textPersonName"
                android:paddingLeft="10dp" />

            <TextView
                android:id="@+id/errorTextView_issuer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="#FF0000" />

            <androidx.legacy.widget.Space
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_weight="1" />

            <include
                android:id="@+id/exclusiveDate"
                layout="@layout/item_label_date_input" />

            <androidx.legacy.widget.Space
                android:id="@+id/space"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Custom Field (Text)" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/customStringRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <Button
                android:id="@+id/addCustomStringBt"
                android:layout_width="@dimen/text_field_width_normal"
                android:layout_height="@dimen/text_field_height"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="ADD" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="40dp"
                android:text="Custom Field (Date)" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/customDateRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/addCustomDateBt"
                android:layout_width="150dp"
                android:layout_height="@dimen/text_field_height"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="ADD" />

            <androidx.legacy.widget.Space
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/fab_margin"
        android:layout_marginTop="@dimen/fab_margin"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_marginBottom="@dimen/fab_margin"
        app:fabCustomSize="65dp"
        app:maxImageSize="30dp"
        app:srcCompat="@drawable/ic_baseline_add_24"
        tools:ignore="ContentDescription,SpeakableTextPresentCheck"/>

</RelativeLayout>