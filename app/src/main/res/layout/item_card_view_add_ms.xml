<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/home_cardview_width"
    android:layout_height="@dimen/home_cardview_height"
    app:cardCornerRadius="@dimen/corner_radius"
    app:cardBackgroundColor="?attr/colorSecondary">

    <RelativeLayout
        android:id="@+id/cardRL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackgroundBorderless">

        <ImageView
            android:id="@+id/takePictureIV"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id = "@+id/addImageInstruction"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="@dimen/text_inside_cardlview_margin"
            android:paddingBottom="@dimen/text_inside_cardlview_margin">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                app:srcCompat="@drawable/ic_baseline_image_24"
                app:tint="?attr/colorOnSecondary" />

            <TextView
                android:id="@+id/takePictureTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="@string/front"
                android:textAlignment="center"
                android:textColor="?attr/colorOnSecondary"
                android:textSize="16sp" />
        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>